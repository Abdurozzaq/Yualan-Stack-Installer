{
  "name": "yualan-installer",
  "version": "0.1.0",
  "description": "Electron-based portable stack installer for Laravel + Inertia + Vue + PostgreSQL (Windows)",
  "main": "src/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist build",
    "postinstall": "electron-builder install-app-deps",
    "fetch": "node scripts/fetch-payloads.mjs"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "node-downloader-helper": "^2.1.7",
    "open": "^10.1.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^23.6.0",
    "rimraf": "^5.0.7"
  },
  "build": {
    "appId": "com.yualan.installer",
    "productName": "Yualan Stack Installer",
    "files": [
      "src/**/*",
      "assets/**/*",
      "payloads/**/*",
      "templates/**/*",
      "!**/*.map"
    ],
    "asar": true,
    "asarUnpack": [
      "payloads/**/*",
      "templates/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "dir"
    },
    "forceCodeSigning": false,
    "electronDownload": {
      "cache": "./cache"
    }
  }
}
